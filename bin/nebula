import os
import sys
import time
import argparse
import logging
import socket


from nebula import NebulaCompile, Scheduler, Config, WebSite, WorkRepo, DagSet

def main(args):
    config = Config(mesos=args.mesos,
        port=args.port,
        host=args.server,
        workdir=args.workdir,
        docker=args.docker,
        docker_clean = args.docker_clean,
        dist_storage_dir = os.path.abspath(args.dist_storage),
        basedir=os.path.dirname(args.buildfile),
        shared_dirs=list(os.path.abspath(a) for a in args.shared),
        max_servers=args.max_servers
    )
    build = NebulaCompile()
    if build.compile(args.buildfile):
        sys.stderr.write("Compile Failure")
        sys.exit(1)
    build.build_images(config)
    sched = Scheduler(build.to_dags(), config)
    web = WebSite(sched, config)

    if config.mesos is not None:
        import nebula.mesos_drms
        drms = nebula.mesos_drms.MesosDRMS(sched, config)

    try:
        web.start()
        drms.start()
        while True:
            time.sleep(5)
    except KeyboardInterrupt:
        pass
    finally:
        web.stop()
        drms.stop()

def describe(args):
    config = Config(
        mesos=args.mesos,
        port=args.port,
        host=args.server,
        docker_clean = args.docker_clean,
        basedir=os.path.dirname(args.buildfile)
    )
    if not args.resume:
        build = NebulaCompile()
        if build.compile(args.buildfile):
            sys.stderr.write("Compile Failure")
            sys.exit(1)
        dagset = build.to_dags()
        dagset.save(config.get_schema_dir())
    else:
        dagset = DagSet.load(config.get_schema_dir())

    for a in dagset.dags.values():
        print "DAG:", a


if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("--mesos", default="127.0.0.1:5050")
    parser.add_argument("--port", type=int, default=9999)
    parser.add_argument("-v", action="store_true", default=False)
    parser.add_argument("-t", "--tree", action="store_true", default=False)
    parser.add_argument("-r", "--resume", action="store_true", default=False)
    parser.add_argument("--docker-clean", action="store_true", default=False)
    parser.add_argument("--dist-storage", default="/tmp/nebula-storage")
    parser.add_argument("-s", "--server", default=None)
    parser.add_argument("--sf", "--shared", dest="shared", action="append", default=[])
    parser.add_argument("-m", "--max-servers", type=int, default=0)
    parser.add_argument("-w", "--workdir", default="/tmp")
    parser.add_argument("--docker", default=None)

    parser.add_argument("builddir", nargs="?", default=None)
    args = parser.parse_args()

    if args.builddir is None:
        bfile = os.path.abspath("Nebulafile")
        if not os.path.exists(file):
            bfile = os.path.abspath("NebulaFile")
        args.buildfile = bfile
    else:
        bfile = os.path.join(os.path.abspath(args.builddir), "Nebulafile")
        if not os.path.exists(bfile):
            bfile = os.path.join(os.path.abspath(args.builddir), "NebulaFile")
        args.buildfile = bfile
    args.workdir = os.path.abspath(args.workdir)

    if args.server is None:
        args.server = socket.gethostname()

    if args.v:
        logging.basicConfig(level=logging.DEBUG)
        logging.info("Verbose logging")
    else:
        logging.basicConfig(level=logging.INFO)

    if args.tree:
        describe(args)
    else:
        main(args)
