import os
import sys
import time
import argparse
import logging
import socket
import logging
import nebula.warpdrive
import nebula.cwl

if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    subparsers = parser.add_subparsers(title="engine")
    
    parser_galaxy = subparsers.add_parser('galaxy')
    galaxy_subparser = parser_galaxy.add_subparsers(title="cmd")
    nebula.warpdrive.add_warp_build_commands(galaxy_subparser)
    nebula.warpdrive.add_warp_run_commands(galaxy_subparser)

    parser_cwl = subparsers.add_parser('cwl')
    cwl_subparser = parser_cwl.add_subparsers(title="cmd")
    nebula.cwl.add_cwl_build_command(cwl_subparser)

    args = parser.parse_args()

    if args.v:
        logging.basicConfig(level=logging.DEBUG)
        logging.info("Verbose logging")
    else:
        logging.basicConfig(level=logging.INFO)

    func = args.func

    #try:
    kwds=vars(args)
    del kwds['v']
    del kwds['vv']
    del kwds['func']
    e = func(**kwds)
    sys.exit(e)
    #except Exception, e:
    #    sys.stderr.write("%s\n" % (e.message))
    #    sys.exit(1)
